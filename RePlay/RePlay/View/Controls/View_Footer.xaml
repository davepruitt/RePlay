<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RePlay.View.Controls.View_Footer">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" StrokeThickness="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="White" Offset="0" />
                    <GradientStop Color="{StaticResource Key=txbdc_grey_accent}" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border Grid.Row="1" BackgroundColor="{StaticResource Key=txbdc_offwhite}" StrokeThickness="0">
            <Image Source="txbdc_name.png" HorizontalOptions="Center" VerticalOptions="Center" />
        </Border>
        <Border Grid.Row="2" BackgroundColor="{StaticResource Key=Gray300}" StrokeThickness="0" HeightRequest="2" />
    </Grid>
</ContentView>
