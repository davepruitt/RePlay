<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RePlay requires access to this tablet's storage. Please press the button below to grant access. Thank you!"
        android:textSize="48sp"
        android:layout_margin="50dp"
        android:textColor="@color/txbdc_green"
        android:textAlignment="center"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRANT PERMISSION"
        android:background="@drawable/txbdc_button_background_selector"
        android:textColor="@drawable/txbdc_button_foreground_selector"
        android:padding="20dp"
        android:textSize="48sp"
        android:id="@+id/grant_permission_button"
    />

</LinearLayout>
